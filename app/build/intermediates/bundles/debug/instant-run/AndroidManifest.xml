<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.perrinn.client"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="23" />

    <!-- get internet access -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.android.tools.fd.runtime.BootstrapApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme.NoActionbar" >
        <activity
            android:name="com.perrinn.client.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.perrinn.client.LandingActivity"
            android:label="@string/title_activity_landing"
            android:parentActivityName="com.perrinn.client.MainActivity"
            android:theme="@style/AppTheme.NoActionbar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.perrinn.client.MainActivity" />
        </activity>
        <activity
            android:name="com.perrinn.client.projectsActivity"
            android:label="@string/title_activity_projects"
            android:parentActivityName="com.perrinn.client.LandingActivity"
            android:theme="@style/AppTheme.NoActionbar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.perrinn.client.LandingActivity" />
        </activity>
    </application>

</manifest>