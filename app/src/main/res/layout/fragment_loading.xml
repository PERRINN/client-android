<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.LoadingFragment">
    <ImageView
        android:id="@+id/loading_logo"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:src="@mipmap/ic_launcher"
        android:layout_centerHorizontal="true"/>
    <ProgressBar
        android:id="@+id/loading_progress_bar"
        android:layout_centerInParent="true"
        android:layout_width="128dp"
        android:layout_height="128dp" />
    <TextView
        android:id="@+id/loading_progress_text"
        android:layout_below="@id/loading_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/loading_string"
        android:onClick="enterTextView"/>

</RelativeLayout>
