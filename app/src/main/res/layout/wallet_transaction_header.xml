<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/wallet_left_right_padding"
    android:paddingRight="@dimen/wallet_left_right_padding"
    android:paddingTop="@dimen/wallet_top_bottom_header_padding"
    android:paddingBottom="@dimen/wallet_top_bottom_header_padding"
    android:background="@color/colorWalletHeadings">
    <TextView
        android:id="@+id/wallet_transaction_header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:textColor="@color/colorWalletHeadingsText"/>
    <TextView
        android:id="@+id/wallet_transaction_header_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textColor="@color/colorWalletHeadingsText" />
</RelativeLayout>